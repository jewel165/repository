<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Suite_CrossBroserTesting" parallel = "tests">

	
  <test thread-count="5" name="CrossBroswer_CHROME">
  	<parameter name ="browser" value = "chrome">
  		</parameter>
  	
  		<groups>
  			<run>
  				<include name="Smoke"></include>
  				<include name="random"></include>
  				<include name="Regression"></include>
  			</run>
  		</groups>
    <classes>
      <class name="tests.FB_Homepage"/>
      
     </classes>
    
    </test> <!-- Test -->
    
    <test thread-count="5" name="CrossBroswer_Firefox">
  	<parameter name ="browser" value = "firefox">
  		</parameter>
  	
  		<groups>
  			<run>
  				<include name="Smoke"></include>
  				<include name="random"></include>
  				<include name="Regression"></include>
  			</run>
  		</groups>
    <classes>
      <class name="tests.FB_Homepage"/>
    </classes>
    
    </test> <!-- Test -->
    
   
</suite> <!-- Suite -->
